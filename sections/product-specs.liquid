        <h2 class='tw-text-center tw-text-[24px] md:tw-text-[36px] tw-font-medium tw-text-black tw-max-w-[280px] lg:tw-max-w-[400px] tw-tracking-normal'>
          {{ section.settings.title }}
        </h2>
      </div>
    {% endif %}

